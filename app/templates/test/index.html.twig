{% extends 'base.html.twig' %}

{% block title %}
    Test list
{% endblock %}
{% block body %}
    <h1>Test list</h1>
    {% if data is defined and data|length %}

        <table class="table table-striped">
            <thead>
            <tr>
                <th id="label.id">Id</th>
                <th id="label.title">Title</th>
                <th id="label.tags">Tags</th>
                <th scope="col">
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>

            {% for item in data %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.title }}</td>
                    <td>{{ item.tags|join(', ') }}</td>
                    <td>&nbsp;</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% else %}
        <p>
            Empty list.
        </p>
    {% endif %}
    {% trans_default_domain 'app' %}

{% endblock  %}